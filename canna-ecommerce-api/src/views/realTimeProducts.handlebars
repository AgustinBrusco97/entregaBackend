<section class="hero">
  <h1>Cat치logo en tiempo real</h1>
  <p class="muted">Alta y baja de productos con WebSockets</p>
</section>

<div class="rt-layout">
  <div class="grid-wrap">
    <section class="product-grid" id="rt-grid">
      {{#if products.length}}
        {{#each products}}
          <article class="card" data-id="{{_id}}">
            <div class="thumb">
              {{#if thumbnails.[0]}}
                <img src="{{thumbnails.[0]}}" alt="" onerror="this.outerHTML='<div class=&quot;placeholder&quot;>{{title.[0]}}</div>'">
              {{else}}
                <div class="placeholder">{{title.[0]}}</div>
              {{/if}}
              <span class="badge">{{category}}</span>
            </div>
            <div class="card-body">
              <h3 class="title">{{title}}</h3>
              <p class="desc">{{description}}</p>
              <div class="meta">
                <span class="price">$ {{price}}</span>
                <span class="stock">Stock: {{stock}}</span>
              </div>
              <code class="sku">{{code}}</code>
              <div class="actions">
                <button class="danger ws-delete" data-id="{{_id}}">Eliminar</button>
              </div>
            </div>
          </article>
        {{/each}}
      {{else}}
        <p class="empty">No hay productos</p>
      {{/if}}
    </section>
  </div>

  <aside class="side">
    <form id="ws-create-form" class="form">
      <h3 style="margin:0">Nuevo producto (WS)</h3>
      <input name="title" placeholder="T칤tulo" required />
      <textarea name="description" placeholder="Descripci칩n"></textarea>
      <input name="price" type="number" min="0" step="0.01" placeholder="Precio" required />
      <input name="category" placeholder="Categor칤a (flowers, extracts, edibles, accessories)" required />
      <input name="stock" type="number" min="0" step="1" placeholder="Stock" required />
      <input name="code" placeholder="C칩digo 칰nico (opcional)" />
      <input name="thumbnail" placeholder="Thumbnail URL (opcional)" />
      <button type="submit">Crear (socket)</button>
    </form>
  </aside>
</div>

<!-- 游녢 cliente socket.io + l칩gica -->
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtime.js"></script>
